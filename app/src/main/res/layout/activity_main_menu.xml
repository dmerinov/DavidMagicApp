<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showCards"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/cards"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dices"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <Button
        android:id="@+id/dices"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/dices"
        app:layout_constraintLeft_toRightOf="@id/showCards"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/showCards" />

    <Button
        android:id="@+id/buyCard"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:text="@string/buy_card"
        app:layout_constraintLeft_toLeftOf="@id/showCards"
        app:layout_constraintRight_toRightOf="@id/showCards"
        app:layout_constraintTop_toBottomOf="@id/showCards" />

    <Button
        android:id="@+id/mockBooster"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:text="@string/mock_booster_pack"
        app:layout_constraintLeft_toLeftOf="@id/dices"
        app:layout_constraintRight_toRightOf="@id/dices"
        app:layout_constraintTop_toBottomOf="@id/dices" />

</androidx.constraintlayout.widget.ConstraintLayout>