<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/petition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="22sp"
        android:text="@string/card_request"/>

    <EditText
        android:id="@+id/cardNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/card_name"
        app:layout_constraintTop_toBottomOf="@id/petition"
        app:layout_constraintBottom_toTopOf="@id/search_card"
        app:layout_constraintStart_toStartOf="@id/petition"
        app:layout_constraintEnd_toEndOf="@id/petition"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/search_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardNameInput"
        app:layout_constraintStart_toStartOf="@id/cardNameInput"
        app:layout_constraintEnd_toEndOf="@id/cardNameInput"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/search"/>
</androidx.constraintlayout.widget.ConstraintLayout>